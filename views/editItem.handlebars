{{> navbar}}
<ul class="error-message" id="alerts">
    {{#each alerts}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
<main>
    <form method="POST" action="/edit/item/{{itemId}}">
        <label for="itemNameInput">Item Name</label>
        <input type="text" id="itemNameInput" name="itemNameInput" value="{{itemName}}"/>
        <label for="itemDescriptionInput">Item Description</label>
        <input type="text" id="itemDescriptionInput" name="itemDescriptionInput" value="{{itemDescription}}"/>
        <label for="submit">Submit Changes</label>
        <input type="submit" value="Submit"/>
    </form>
    <form method="POST" action="/edit/item/setcount/{{itemId}}">
        <label for="itemCountInput">Item Count</label>
        <input type="number" id="itemCountInput" name="itemCountInput" value="{{itemCount}}"/>
        <label for="submit">Set Count</label>
        <input type="submit" value="Submit"/>
    </form>
    <form method="POST" action="/edit/item/setvalue/{{itemId}}">
        <label for="itemValueInput">Item Value</label>
        <input type="number" step=".01" id="itemValueInput" name="itemValueInput" value="{{itemValue}}"/>
        <label for="submit">Set Value</label>
        <input type="submit" value="Submit"/>
    </form>
</main>