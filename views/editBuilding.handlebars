{{> navbar}}
<ul class="error-message" id="alerts">
    {{#each alerts}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
<main>
    <form method="POST" action="/edit/building/{{buildingId}}">
        <label for="buildingNameInput">Building Name</label>
        <input type="text" id="buildingNameInput" name="buildingNameInput" value="{{buildingName}}"/>
        <label for="buildingDescriptionInput">Building Description</label>
        <input type="text" id="buildingDescriptionInput" name="buildingDescriptionInput" value="{{buildingDescription}}"/>
        <label for="buildingDescriptionInput">Building Street Address</label>
        <input type="text" id="buildingAddressInput" name="buildingAddressInput" value="{{buildingAddress}}"/>
        <label for="buildingCityInput">Building City</label>
        <input type="text" id="buildingCityInput" name="buildingCityInput" value="{{buildingCity}}"/>
        <label for="buildingStateInput">Building State</label>
        <input type="text" id="buildingStateInput" name="buildingStateInput" value="{{buildingState}}"/>
        <label for="buildingZipInput">Building Zip</label>
        <input type="text" id="buildingZipInput" name="buildingZipInput" value="{{buildingZip}}"/>
        <label for="submit">Submit Changes</label>
        <input type="submit" value="Submit"/>
    </form>
</main>