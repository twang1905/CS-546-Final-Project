<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="/public/css/lab10.css" />
        <title>Register</title>
    </head>
    <body>
        <header>
            <h1>Register</h1>
        </header>
        <main>
            <form action="/register" id="registration-form" method="post">
                <label for="firstNameInput">First Name</label><br />
                <input type="text" id="firstNameInput" name="firstNameInput" /><br /><br />
                <label for="lastNameInput">Last Name</label><br />
                <input type="text" id="lastNameInput" name="lastNameInput" /><br /><br />
                <label for="emailAddressInput">Email Address</label><br />
                <input type="email" id="emailAddressInput" name="emailAddressInput" /><br /><br />
                <label for="passwordInput">Password</label><br />
                <input type="password" id="passwordInput" name="passwordInput" /><br /><br />
                <label for="confirmPasswordInput">Confirm Password</label><br />
                <input type="password" id="confirmPasswordInput" name="confirmPasswordInput" /><br /><br />
                <label for="roleInput">Role</label><br />
                <select id="roleInput" name="roleInput">
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                </select><br /><br />
                <input type="submit" value="Submit" /><br /><br />
            </form>
            <a href="/">Already have an account? Click here to log-in</a><br /><br />
        </main>
</html>