<link rel="stylesheet" href="/public/css/main.css" />
{{!-- {{> navbar}} --}}

<main>
  <div class="topnav">
    <a href="/profile"><img class="logo" src="/public/images/logo.png" /></a>
    <a href="/add">Create</a>
    <a href="/profile">Browse</a>
    <a href="/profile">My Profile</a>
    <a href="/logout">Logout</a>
  </div>

  <div class="parent-container" id="profileForms">
    <div class="form-container">
      <form method="POST" action="/profile">
        <input type="hidden" name="formType" value="profilePicture" />
        <img src="{{profilePicture}}" /><br /><br />
        <label for="pictureUpload">Select profile picture:</label><br />
        <input type="file" id="pictureUpload" name="pictureUpload" /><br /><br
        />
        <label for="profilePictureSubmit">Update profile picture:</label><br />
        <input
          type="submit"
          name="profilePictureSubmit"
          id="profilePictureSubmit"
          value="Submit Profile Picture"
        />
      </form>
    </div>

    <div class="form-container">
      <form method="POST" action="/profile">
        <input type="hidden" name="formType" value="userInfo" /><br />
        <label for="firstNameInput">First Name</label><br />
        <input
          name="firstNameInput"
          id="firstNameInput"
          type="text"
          value="{{firstName}}"
        /><br /><br />

        <label for="lastNameInput">Last Name</label><br />
        <input
          name="lastNameInput"
          id="lastNameInput"
          type="text"
          value="{{lastName}}"
        /><br /><br />

        <label for="userNameInput">Username</label><br />
        <input
          name="userNameInput"
          id="userNameInput"
          type="text"
          value="{{userName}}"
        /><br /><br />

        <label for="emailAddressInput">Email Address</label><br />
        <input
          name="emailAddressInput"
          id="emailAddressInput"
          type="email"
          value="{{emailAddress}}"
        /><br /><br />
        <label for="userInfoSubmit">Update user info:</label><br />
        <input
          type="submit"
          name="userInfoSubmit"
          id="userInfoSubmit"
          value="Submit User Info"
        /><br />
      </form>
    </div>

    <div class="form-container">
      <form method="POST" action="/profile">
        <input type="hidden" name="formType" value="password" />
        <label for="passwordInput">Password</label><br />
        <input
          name="passwordInput"
          id="passwordInput"
          type="password"
          value="{{password}}"
        /><br /><br />
        <label for="confirmPasswordInput">Confirm Password</label><br />
        <input
          name="confirmPasswordInput"
          id="confirmPasswordInput"
          type="password"
          value=""
        /><br /><br />
        <label for="passwordSubmit">Update password:</label><br />
        <input
          type="submit"
          name="passwordSubmit"
          id="passwordSubmit"
          value="Submit Password"
        /><br />
      </form>
    </div>
  </div>

  <ul class="error-message" id="alerts">
    {{#each alerts}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

</main>