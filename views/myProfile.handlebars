
<link rel="stylesheet" href="/public/css/myProfile.css">
{{> navbar}}
<main>
  <ul id="alerts">
    {{#each alerts}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
  <div id="profileForms">
  <form method="POST" action="/profile">
    <input type="hidden" name="formType" value="profilePicture">
    <img src="{{profilePicture}}" />
    <label for="pictureUpload">Select profile picture:</label>
    <input type="file" id="pictureUpload" name="pictureUpload" />
    <label for="profilePictureSubmit">Update profile picture:</label>
    <input type="submit" name="profilePictureSubmit" id="profilePictureSubmit" value="Submit Profile Picture" />
  </form>
  <form method="POST" action="/profile">
    <input type="hidden" name="formType" value="userInfo">
    <label for="firstNameInput">First Name</label>
    <input
      name="firstNameInput"
      id="firstNameInput"
      type="text"
      value="{{firstName}}"
    />

    <label for="lastNameInput">Last Name</label>
    <input
      name="lastNameInput"
      id="lastNameInput"
      type="text"
      value="{{lastName}}"
    />

    <label for="userNameInput">Username</label>
    <input
      name="userNameInput"
      id="userNameInput"
      type="text"
      value="{{userName}}"
    />

    <label for="emailAddressInput">Email Address</label>
    <input
      name="emailAddressInput"
      id="emailAddressInput"
      type="email"
      value="{{emailAddress}}"
    />
    <label for="userInfoSubmit">Update user info:</label>
    <input type="submit" name="userInfoSubmit" id="userInfoSubmit" value="Submit User Info" />
  </form>
  <form method="POST" action="/profile">
    <input type="hidden" name="formType" value="password">
    <label for="passwordInput">Password</label>
    <input
      name="passwordInput"
      id="passwordInput"
      type="password"
      value="{{password}}"
    />
    <label for="confirmPasswordInput">Confirm Password</label>
    <input
      name="confirmPasswordInput"
      id="confirmPasswordInput"
      type="password"
      value=""
    />
    <label for="passwordSubmit">Update password:</label>
    <input type="submit" name="passwordSubmit" id="passwordSubmit" value="Submit Password" />
  </form>
  </div>
  <a href="/logout">Click here to logout.</a>
</main>